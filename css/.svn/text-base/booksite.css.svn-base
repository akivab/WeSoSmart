/* Akiva Bamberger.
   References: Hypem source code (hypem.com) */

@import url(http://fonts.googleapis.com/css?family=Arvo);

html, body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, cite, code, del, em, font, img, small, strike, sub, sup, dl, dt, dd, ol, ul, li,
fieldset, form, iframe, label, legend, table, caption, tbody, tfoot, thead, tr, th, td {
margin:0;padding:0;border:0;outline:0;font-weight:inherit;font-size:100%;font-family:inherit;vertical-align:baseline}
ol, ul {list-style:none}table {border-collapse:separate;border-spacing:0}caption, th, td {text-align:left;font-weight:normal}blockquote:before, blockquote:after,{content: ""}blockquote, q {quotes: "" ""}i {font-style:normal}

body { background: #fff; color: #111; font: 1em 'Helvetica', 'Arial', sans-serif; overflow-x: hidden; position: relative; text-align: center; width: 100%; }

h3{ font-family: 'Arvo', helvetica, serif; font-size: 1.25em; }
h4{ font-family: 'Arvo', helvetica, serif; font-size: .75em; }

a{ text-decoration: none; color: #02509f}
a:visited{ color: #02509f }
a:hover{ color: #5d99d7 }

.header, .main, .footer { width: 960px; margin: auto; clear: both;}
.header_top { margin-top: 10px; height: 60px}
.header_top_small{ margin-top: 10px; height: 60px; }
.header_top_div { float: left; width: 120px; }
.header_top_div div{ margin-top:10px; visibility: hidden; }
.header_top_div a{ z-index: 20 }
.header_top_right_div { float: right; width: 120px}
#others { float:right; width: 480px; }
#logo { width: 240px; height: 60px; position:relative; top:-10px }
#subject_main{ position: relative; top: 0px }
#finding_main{ width: 650px; float: left}
#logo_text{ position: relative; padding: 10px; left: 90px; width: 350px; top: 90px; text-align: left; font-size: 1.5em; font-family: 'Arvo', helvetica, serif; color: #02509f;}

.main{ margin-top: 30px; }
.description{ font-family: 'Arvo', helvetica, serif; height: 60px; font-size: 2em; text-align: left;}
.description p{ display: inline; height: 30px; padding: 0; margin: 0; margin-left: 30px; font-size: .5em;} 
.top_main{ height: 120px; font-size: 1.25em;}
.top_main div{ margin-right: 20px; float: left;  text-align: left; }
.top_main div div{ clear: both; width: inherit }
#top_main_image{ width: 120px; }
#main_image { width: 120px; }
#top_main_description{ width: 500px; }
#top_main_stats{ margin-right: 0; width: 285px; float: right}

.lower_main{ clear: both; margin-top: 60px; text-align: left}
.lower_main_action div{ min-height: 180px; margin-bottom: 30px; }
.lower_main_action div div{ min-height: 30px; margin-bottom: 0px;}
.lower_main_action{ width: 640px; float: left}
.lower_main_recommendations{ height: 540px ; width: 285px; float: right}
.lower_main_recommendations div{ height: 100%;}

.left_welcome{ float: left; width: 450px;}
.right_welcome{ float: right; width: 450px;}
#logo_big{ height: 180px; margin-bottom: 30px; border-radius: 12px; -moz-border-radius: 12px; background: url(/img/big_logo.png);}
#recent_activity{ height: 240px; overflow: hidden}
.recent_activity_item {position: relative; width: 350px; height: 75px; margin: auto; border-bottom: 1px solid lightgray; display: block; padding: 10px 0 10px 0}
.recent_activity_item img{ float: left; height: 75px;}
.recent_activity_text {height: 75px; margin-left: 30px; text-align: left; width: 250px; float: right; overflow: hidden}
#big_picture{ height: 340px; margin-bottom: 5px;  border-radius: 8px; -moz-border-radius: 8px; background-image: url(/img/columbia.png)}
.browse_and_try{ margin-top: 30px; height: 180px; }
.browse_and_try a{ cursor: pointer; float: left; width: 140px; margin-left: 5px; margin-right: 5px; height: 60px; padding: 10px 0 10px 0; font-size: 1.5em; font-family: 'Arvo', helvetica, serif; border-radius: 8px; -moz-border-radius: 8px;}
.browse_and_try a:hover{ color: #02509f }

.welcome_browse{ background-color: #ADD8E6 }
.welcome_try{ background-color: #FF7D40 }
.welcome_signup{ background-color: #90EE90 }
.welcome_touched{ background-color: #D3D3D3 }

.search div, button{ font-size: 1em; text-align: left; float: left;}
.search #dept{ width: 120px; margin-right: 60px; }
.search #course{ width: 300px; margin-right: 60px; }
.search select { width: 100%; -moz-border-radius: 4px; font-size: 1.25em; background-color: transparent; }
.search #select_ok{ font-size: 1.25em;}

#course_listing{ clear: both; margin-top: 90px; text-align: left; }
#course_listing_dept{ float: left; margin-right: 10px; }
.course_listing_class{ font-size: 1.25em; }
/*.course_item{  width: 500px; }*/
.current_course_item{ background-color: #D5EDF8; padding: 5px; margin-top: 10px; width: 100%;}
.previous_course_item{ background-color:  #D3D3D3; padding: 5px; margin-top: 10px; width: 100%;}
.course_item_options{ position: relative; top: -20px; float: right;}
.course_item_options a{ float: left; margin-left: 20px; }
#added_courses{ clear: both; margin-top: 60px; text-align: left; }
#find_books_options *{ float: right;}

#middle_main_activity{ overflow: hidden; }
.main_action_item{ display: block; }
#books_had{ margin-top: 20px; }

#show_books_while_finding{ float: right; text-align: left; width: 270px; padding-left: 20px; border-left: 1px solid #D3D3D3;}
#poweredby{ float: right; margin-top: 20px; opacity: .9}
.import_books { float: left; text-align: left; width: 500px}
.import_books textarea,button{ clear:both; }
.import_books textarea{ width: 500px; height: 300px;}
.import_books button{ float: none;} 

a.dont_add_class{ color:#696969; }
a.dont_add_class:hover{ color: #696969; }

.book_listing{ min-height: 180px;  padding-top: 20px; border-bottom: 1px solid #D3D3D3}
.book_item_pic{ float:left; width: 70px;}
.book_item_pic a{ text-align: right; font-size: 14px; width: 30px; overflow: none; padding-left: 5px}
.book_item_desc{ float:right; width: 190px; font-size: 12px}
.book_title{ font-size: 16px; }
.book_author{ font-size: 14px; }

#smallform {text-align: left;}
#smallform small { font-size: .75em; width: 180px; display: block; margin-left: 30px; color: gray; clear:both; margin-bottom:15px}
#smallform input { padding: 3px; float: right; font-size: 17px;}
#smallform label { display: block; margin: 0 0 15px 0;  border-bottom: 1px solid lightgray;}
#smallform {font-size: 17px; margin: 10px; padding: 10px; }
#formp{text-align: left; background-color: lightblue; color: black; padding: 10px; font-size:1.75em; font-family: 'Arvo', helvetica, serif;}
input#cancel{ float: left } 

#commentform *{ display: block; padding: 5px;}

.award img{ display: block; width: 75px; height: 75px; }
.award { margin-top:30px; font-size: 10pt}

.footer{ clear: both; margin-bottom: 30px; position: relative; bottom:-30px}
