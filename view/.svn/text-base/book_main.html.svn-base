<div class="top_main">
    <div id="top_main_image">
        <img id="main_image" src="{{picture}}" />
    </div>
    <div id="top_main_description">
        <h3>{{description.author}}</h3>        
        <h4>{{description.description}}</h4>
        <br />
        <h4>ISBN: {{description.isbn}}</h4>
    </div>
</div>
<div class="lower_main">
    <div class="lower_main_action">
        <div id="middle_main_activity">
            <div id="classes">
            {% for i in user_class_list %}
                {% ifequal 1 forloop.counter %}<h3>classes:</h3>{%endifequal%}
                <a href='/class/{{i.section_id.key}}' class="main_action_item">{{i.section_id.class_id.name}}</a>
            {% endfor %}
            </div>{%if user_book_list %}
            <div id="books_wanted"><h3>books wanted:</h3>
            {% for i in user_book_list %}
                {% ifequal 0 i.status %}
                <a href='/book/{{i.book_id.key}}' class="main_action_item">{{i.book_id.title}}</a>
                {% endifequal %}
            {% endfor %}
            </div>

            <div id="books_had"><h3>books had:</h3>
            {% for i in user_book_list %}
                {% ifequal 1 i.status %}
                <a href='/book/{{i.book_id.key}}' class="main_action_item">{{i.book_id.title}}</a>
                {% endifequal %}
            {% endfor %}
            </div>{%endif%}
        </div>
