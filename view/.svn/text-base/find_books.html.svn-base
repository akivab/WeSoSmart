<!doctype html>
<!-- Django style -->
<html>
    <head>
        {% include "scripts.html" %}
    </head>

    <body>
        {% include "header.html" %}
       <div class="main">
            <div id="finding_main">
                <div class="description">{{title}}<p>(<a href="/import">want faster?</a>)</p></div>
                <div class="search">
                    <div id="dept">Department<br />
                        <select id="dept_select">
                            <option>Loading...</option>
                        </select>
                    </div>
                    <div id="course">Course<br />
                        <select id="course_select" disabled=1>
                            <option>Please select a department</option>
                            <option>Loading...</option>
                        </select>
                    </div>
                    <div><br /><button id="select_ok">OK</button></div>
                    
                </div>
                <div id="course_listing">
                     Start looking! Courses will show up here.
                    <div class="current_course_item">Courses <b>for Spring 2011</b> will appear like this.</div>
                    <div class="previous_course_item">Courses <b>from before then</b> will appear like this.</div>
                </div>
                <div id="added_courses">
                    Selected classes will show up here.
                </div>
                <div id="find_books_options">
                    <button id="continue_book_options" disabled=1>Continue</button>
                </div>
            </div>
       <div>
       <div id="show_books_while_finding">
            Recommended books will show up here.
        </div>
      <div>
    </body>
</html>

